{
    "env": {
        "browser": false,
        "mocha": true,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": 0,
        "no-unused-vars": 0,
        "indent": [
            "error",
            4,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            2, "single", "avoid-escape"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-function-paren": ["error", "never"]
    }
}
